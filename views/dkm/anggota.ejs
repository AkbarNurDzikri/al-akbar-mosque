<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <!-- <link rel='stylesheet' href='/stylesheets/style.css' /> -->
    <link rel="stylesheet" href="/stylesheets/bootstrap-5.3.0-alpha1-dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
  </head>
  <body>
    <div class="container mt-5">
      <div class="card">
        <div class="card-header bg-success text-white">
          <button class="btn btn-light" data-bs-toggle="modal" data-bs-target="#modal" id="modalTrigger"><i class="bi bi-person-plus"></i></button>
        </div>
        <div class="card-body">
          <% if (alert.msg != '') { %>
            <div class="alert alert-<%= alert.status %> alert-dismissible fade show" role="alert">
              <%= alert.msg %> <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
          <% } %>
          <table class="table table-responsive table-hover text-center">
            <thead>
              <caption>Daftar Anggota</caption>
              <tr>
                <th>No</th>
                <th>Nama</th>
                <th>Alamat</th>
                <th>No HP</th>
                <th>Jabatan</th>
                <th>Opsi</th>
              </tr>
            </thead>
            <tbody>
              <% let i = 1; %>
              <% anggota.forEach(agt => { %>
                <tr>
                  <td><%= i++ %></td>
                  <td><%= agt.nama %></td>
                  <td><%= agt.alamat %></td>
                  <td><%= agt.nohp %></td>
                  <td><%= agt.jabatan %></td>
                  <td>
                    <a href="" class="btn btn-success btn-sm btnEdit" data-bs-toggle="modal" data-bs-target="#modal" data-id="<%= agt.id %>" data-nama="<%= agt.nama %>" data-alamat="<%= agt.alamat %>" data-nohp="<%= agt.nohp %>" data-jabatan="<%= agt.jabatan %>">Edit</a>
                    <form action="/anggota?_method=DELETE" method="POST" class="d-inline">
                      <input type="hidden" name="id" value="<%= agt.id %>">
                      <button type="submit" class="btn btn-danger btn-sm btnHapus">Hapus</button>
                    </form>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <%- include('modalAnggota.ejs') %>
    <script src="/stylesheets/bootstrap-5.3.0-alpha1-dist/js/bootstrap.min.js"></script>
    <script src="/javascripts/myScript.js"></script>
  </body>
</html>
